= form_tag(user_page_url(@user.long_token), :method => 'post', 'data-validate' => 'parsley') do
  .form-group
    = text_field_tag :first_name, nil, :placeholder => 'First name', :class => 'form-control', 'data-required' => 'true', 'data-minlength' => '2'
  
  .form-group
    = text_field_tag :last_name, nil, :placeholder => 'Last name', :class => 'form-control', 'data-required' => 'true', 'data-minlength' => '2'
  
  .form-group
    = text_field_tag :phone, nil, :placeholder => 'Phone number', :class => 'form-control', 'data-required' => 'true', 'data-type' => 'phone'

  .form-group
    = submit_tag "Add contact", :class => 'btn btn-block btn-primary btn-lg'
